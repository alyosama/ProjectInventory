    background: rgba(255, 255, 255, 0.8);
    box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
    border-radius: 10px;
  }
  footer{
    padding-top: 60px;
    text-align:center;
  }
  @font-face{
    font-family:MyFont;
    src:url(bootstrap/truetype/LemonMilk.otf);
    font-weight:bold;
  }
  .navbar-brand{
    font-family: MyFont;
    color: #5D6566;
    font-size:30px;
    margin-top:10px;
  }
  a:hover{
    text-decoration:none;
    color: #2753b7;
  }
