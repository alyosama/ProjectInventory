  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="container-fluid" id="container1">
    <div class="row centered-form">
      <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        <div>
        </div>  
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title text-center">Register</h3>
          </div>
          <div class="panel-body">
            <form class="form" action="" method="">
              <div class="form-group">
               <%= f.text_field :first_name, autofocus: true,:class=>"form-control input-sm" ,:placeholder=>"First Name" %>
             </div>

             <div class="form-group">
               <%= f.text_field :last_name, autofocus: true,:class=>"form-control input-sm" ,:placeholder=>"Last Name" %>
             </div>

             <div class="form-group">
               <%= f.text_field :username, autofocus: true,:class=>"form-control input-sm" ,:placeholder=>"User Name" %>
             </div>


             <div class="form-group">
               <%= f.email_field :email, autofocus: true,:class=>"form-control input-sm" ,:placeholder=>"Email address" %>
             </div>

             <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">

                 <%= f.password_field :password, autocomplete: "off",:class=>"form-control input-sm" ,:placeholder=>"Password"  %>
               </div>
             </div>
             <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
               <%= f.password_field :password_confirmation, autocomplete: "off",:class=>"form-control input-sm" ,:placeholder=>"Confirmation Password"  %>
             </div>
           </div>

         </div>

         <div class="form-group">
           <%= f.text_field :about, autofocus: true,:class=>"form-control input-sm" ,:placeholder=>"about" %>
         </div>

         <div class="form-group">
           <%= f.label :avatar %><br>
           <%= f.file_field :avatar %>  
         </div>


         <%= f.submit "Sign up", :class=>"btn btn-info btn-block" %>

       </form>
     </div>
   </div>
 </div>
</div>      
</div>




<% end %>

<%= render "devise/shared/links" %>
