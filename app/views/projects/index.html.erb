<h1>Projects</h1>
<h4 style="diplay: inline; float: right; padding-right: 10px;"><%= link_to 'Add Project', new_project_path %></h4>
    <% @projects.each do |project| %>
      <div class="about" id="what">
        <div class="container">
          <div class="posts">
            <div class="col-md-4">
              <div class="post_grid">
              <div class="view view-fifth"><a href="#">
                          <img src=<%= project.image %> class="img-responsive" alt=""/>
              </div>
                <div class="post_desc">
                 <h4><%= project.name %>,</a></h4>
                 <p><%= project.abstract %></p>
                 <div class="post_bottom">
                   <ul class="time post_list">
                     <i class='time1'> </i>
                     <li class="time_desc">December 25</li>
                     <li><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                     <div class="clearfix"> </div>
                   </ul>
                   <div class="clearfix"> </div>
                 </div>
                </div>
               </div>
            </div>
        </div>
      </div>
    <% end %>
<br>